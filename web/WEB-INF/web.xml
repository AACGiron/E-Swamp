<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <servlet-class>Controller.LoginPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegPage</servlet-name>
        <servlet-class>Controller.RegPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginRegister</servlet-name>
        <servlet-class>Controller.LoginRegister</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConnEstablish</servlet-name>
        <servlet-class>Controller.ConnEstablish</servlet-class>
        <init-param>
            <param-name>jdbcClassName</param-name>
            <param-value>com.mysql.cj.jdbc.Driver</param-value>
        </init-param>
        <init-param>
            <param-name>dbUserName</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>dbPassword</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>jdbcDriverURL</param-name>
            <param-value>jdbc:mysql</param-value>
        </init-param>
        <init-param>
            <param-name>dbHostName</param-name>
            <param-value>localhost</param-value>
        </init-param>
        <init-param>
            <param-name>dbPort</param-name>
            <param-value>3306</param-value>
        </init-param>
        <init-param>
            <param-name>databaseName</param-name>
            <param-value>e-swamp?useSSL=false</param-value>
        </init-param>
        <load-on-startup>
            0
        </load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>AdminLogin</servlet-name>
        <servlet-class>Controller.AdminLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SimpleCaptcha</servlet-name>
        <servlet-class>Other.SimpleCaptcha</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/LoginPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegPage</servlet-name>
        <url-pattern>/RegPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginRegister</servlet-name>
        <url-pattern>/LoginRegister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConnEstablish</servlet-name>
        <url-pattern>/ConnEstablish</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminLogin</servlet-name>
        <url-pattern>/AdminLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SimpleCaptcha</servlet-name>
        <url-pattern>/SimpleCaptcha</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Welcome.jsp</welcome-file>
    </welcome-file-list>
</web-app>
